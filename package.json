{
  "name": "kritviya",
  "private": true,
  "version": "0.1.0",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev:web": "npm run dev --workspace @kritviya/web",
    "dev:api": "npm run start:dev --workspace @kritviya/api",
    "dev:db": "docker compose --env-file .env -f infra/docker-compose.yml up -d postgres",
    "dev": "concurrently -n web,api -c cyan,magenta \"npm run dev:web\" \"npm run dev:api\"",
    "db:migrate": "npm run migrate",
    "db:seed": "npm run seed",
    "migrate": "dotenv -e .env -- npm run db:migrate --workspace @kritviya/api",
    "seed": "dotenv -e .env -- npm run db:seed --workspace @kritviya/api",
    "build:web": "npm run build --workspace @kritviya/web",
    "build:api": "npm run build --workspace @kritviya/api",
    "build": "npm run build:api && npm run build:web",
    "start:api": "dotenv -e .env -- npm run start --workspace @kritviya/api",
    "start:web": "node scripts/start-web.mjs",
    "start:prod": "npm run migrate:deploy && concurrently -n web,api -c cyan,magenta \"npm run start:web\" \"npm run start:api\"",
    "migrate:deploy": "dotenv -e .env -- npm run db:migrate --workspace @kritviya/api",
    "seed:prod": "dotenv -e .env -- npm run db:seed --workspace @kritviya/api",
    "test": "npm run test --workspace @kritviya/api",
    "test:setup": "npm run test:setup --workspace @kritviya/api",
    "test:ci": "npm run test:ci --workspace @kritviya/api",
    "lint": "eslint \"apps/**/*.{ts,tsx,js,cjs,mjs}\" \"packages/**/*.{ts,tsx,js,cjs,mjs}\"",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,cjs,mjs,json,md,yml,yaml}\""
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^8.24.0",
    "@typescript-eslint/parser": "^8.24.0",
    "concurrently": "^9.1.2",
    "dotenv-cli": "^7.4.2",
    "eslint": "^8.57.1",
    "eslint-config-next": "^15.5.0",
    "eslint-config-prettier": "^10.0.1",
    "prettier": "^3.5.0",
    "typescript": "^5.8.2"
  }
}
