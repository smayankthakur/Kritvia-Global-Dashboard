{
  "name": "@kritviya/api",
  "private": true,
  "version": "0.1.0",
  "scripts": {
    "prebuild": "npm run prisma:generate",
    "build": "nest build",
    "start": "node dist/src/main.js",
    "start:dev": "nest start --watch",
    "db:migrate": "prisma migrate deploy --schema prisma/schema.prisma",
    "db:migrate:dev": "prisma migrate dev --schema prisma/schema.prisma",
    "db:reset": "prisma migrate reset --force --skip-seed --schema prisma/schema.prisma",
    "db:seed": "ts-node --project tsconfig.json prisma/seed.ts",
    "db:seed:test": "ts-node --project tsconfig.json prisma/seed-test.ts",
    "prisma:generate": "prisma generate --schema prisma/schema.prisma",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "node scripts/test-runner.mjs test",
    "test:setup": "node scripts/test-runner.mjs setup",
    "test:ci": "node scripts/test-runner.mjs ci"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/platform-express": "^11.0.0",
    "@nestjs/throttler": "^6.4.0",
    "@prisma/client": "^6.3.1",
    "bcryptjs": "^2.4.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.4.7",
    "helmet": "^8.0.0",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.10",
    "@types/jest": "^29.5.14",
    "@types/express": "^5.0.0",
    "@types/node": "^22.13.10",
    "@types/supertest": "^6.0.3",
    "@vercel/node": "^5.3.24",
    "jest": "^29.7.0",
    "prisma": "^6.3.1",
    "supertest": "^7.1.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2"
  }
}
