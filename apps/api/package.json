{
  "name": "@kritviya/api",
  "private": true,
  "version": "0.1.0",
  "engines": {
    "node": ">=20"
  },
  "prisma": {
    "seed": "node prisma/seed.js"
  },
  "scripts": {
    "prebuild": "prisma generate --schema prisma/schema.prisma",
    "pretypecheck": "prisma generate --schema prisma/schema.prisma",
    "pretest:ci": "prisma generate --schema prisma/schema.prisma",
    "build": "node -e \"const fs=require('fs');fs.rmSync('dist',{recursive:true,force:true});fs.rmSync('tsconfig.build.tsbuildinfo',{force:true});\" && tsc -p tsconfig.build.json",
    "start": "node dist/src/main.js",
    "start:prod": "node dist/main.js",
    "start:worker": "node dist/main.js",
    "start:dev": "nest start --watch",
    "db:migrate": "npx prisma migrate deploy --schema prisma/schema.prisma",
    "migrate:deploy": "npx prisma migrate deploy --schema prisma/schema.prisma",
    "migrate:deploy:render": "node scripts/render-migrate-recover.mjs",
    "seed": "npx prisma db seed --schema prisma/schema.prisma",
    "db:migrate:dev": "npx prisma migrate dev --schema prisma/schema.prisma",
    "db:reset": "npx prisma migrate reset --force --skip-seed --schema prisma/schema.prisma",
    "db:seed": "ts-node --project tsconfig.json prisma/seed.ts",
    "db:seed:test": "ts-node --project tsconfig.json prisma/seed-test.ts",
    "graph:backfill": "ts-node --project tsconfig.json src/graph/graph.backfill.ts",
    "prisma:generate": "prisma generate --schema prisma/schema.prisma",
    "typecheck": "tsc -p tsconfig.build.json --noEmit",
    "lint": "eslint \"src/**/*.ts\"",
    "test": "node scripts/test-runner.mjs test",
    "test:unit": "jest -c test/jest-unit.config.js --passWithNoTests",
    "test:e2e": "jest -c test/jest-e2e.config.js --runInBand",
    "test:setup": "node scripts/test-runner.mjs setup",
    "test:ci": "node scripts/test-runner.mjs ci"
  },
  "dependencies": {
    "@nestjs/common": "^11.0.0",
    "@nestjs/core": "^11.0.0",
    "@nestjs/jwt": "^11.0.1",
    "@nestjs/platform-express": "^11.0.0",
    "@nestjs/throttler": "^6.4.0",
    "@prisma/client": "^6.3.1",
    "@types/bcryptjs": "^2.4.6",
    "@types/cookie-parser": "^1.4.10",
    "@types/express": "^4.17.25",
    "@types/node": "^22.13.10",
    "bcryptjs": "^2.4.3",
    "bullmq": "^5.58.5",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "cookie-parser": "^1.4.7",
    "dotenv": "^16.4.7",
    "helmet": "^8.0.0",
    "ioredis": "^5.8.1",
    "razorpay": "^2.9.4",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.0",
    "@types/jest": "^29.5.14",
    "@types/supertest": "^6.0.3",
    "jest": "^29.7.0",
    "prisma": "^6.3.1",
    "supertest": "^7.1.1",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.8.2"
  }
}
